<div>
  <h2><%= @race.name %></h2>
  <%= image_tag @race.image.url(:normal) %>
  
  <%= render 'shared/property_display', modifiers: @race.property_modifiers %>
  <h2>Fähigkeiten</h2>
  <div class="abilities">
    <% @race.abilities.each do |ability| %>
      <div class="ability">
        <h3><%= ability.name %></h3>
        <p><%= ability.desc %></p>
        <%= render 'shared/property_display', modifiers: ability.property_modifiers %>
      </div>
    <% end %>
  </div>
</div>

<div class="actions">
  <% if current_user.has_role?(:gm) %>
    <%= link_to 'Bearbeiten', edit_rule_set_race_path(@rule_set, @race), class: 'btn' %>
  <% end %>
  <%= link_to 'Zurück', rule_set_races_path(@rule_set), class: 'btn' %>
</div>
