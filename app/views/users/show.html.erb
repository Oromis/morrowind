<% provide(:title, @user.name) %>
<section class="user_info">
  <h1>
    <%= @user.name %>
  </h1>
  <div class="clearfix">
    <div class="col-md-2">
      <%= gravatar_for @user %>
    </div>
    <div class="col-md-10">
      <div>Rolle: <%= t("activerecord.attributes.user.roles.#{@user.role}") %></div>
      <div>Theme: <%= @user.theme %></div>
    </div>
  </div>
  <div class="actions">
    <% if current_user.has_role?(:admin) || current_user == @user %>
      <%= link_to 'Bearbeiten', edit_user_path(@user), class: 'btn' %>
    <% end %>
    <%= link_to 'Charaktere', user_characters_path(@user), class: 'btn' %>
  </div>
</section>

