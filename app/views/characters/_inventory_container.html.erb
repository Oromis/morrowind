<div class="item-container" ng-repeat="container in char.containers"
     as-sortable="itemControlListeners" ng-model="<%= collection %>"
     container="{{ container.key }}">
  <div>
    <h3 class="inline">{{ container.name }}</h3>
      <span class="container-weight prop">
        <%= image_tag 'weight.png', alt: 'Traglast', title: 'Traglast' %>
        <span ng-class="{'text-danger': char['encumberance_from_' + container.key] >= 5,
                         'text-warning': char['encumberance_from_' + container.key] > 0}"
              title="{{ char['encumberance_from_' + container.key] }} Behinderungen">
          <span title="{{ container.weight | num:5 }}">{{ container.weight | num }}</span>
          / {{ container.max_weight | num }}
        </span>
      </span>
    <input type="search" placeholder="Suchen ..." ng-model="<%= searchTerm %>"
           class="form-control container-search" />
  </div>
  <button class="item-placeholder" ng-click="addItem(container, <%= itemType %>, $event)">
    Neues Item
  </button>
  <%= render 'inventory_item',
             collection: "#{collection} | filterItems:#{searchTerm}" %>
  <button class="item-placeholder" ng-click="addItem(container, <%= itemType %>, $event)">
    Neues Item
  </button>
</div>
<div class="clear"></div>