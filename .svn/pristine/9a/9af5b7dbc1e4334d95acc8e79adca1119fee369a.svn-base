<% provide(:title, t('pwreset.headline')) %>
<h1><%=t 'pwreset.headline' %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.submit t('pwreset.submit'), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
