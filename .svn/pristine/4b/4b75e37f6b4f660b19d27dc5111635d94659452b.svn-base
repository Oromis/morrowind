$anim-size: 30px;
$cube-size: 10px;

.loading-spinner {
  width: $anim-size + $cube-size;
  height: $anim-size + $cube-size;
  position: relative;
  margin: (50px - ($anim-size + $cube-size)) / 2;

  transition: all 0.3s;
  -webkit-transition: all 0.3s;
  -moz-transition: all 0.3s;

  .cube1, .cube2 {
    background-color: #777;
    width: $cube-size;
    height: $cube-size;
    position: absolute;
    top: 0;
    left: 0;

    -webkit-animation: sk-cubemove 1.8s infinite ease-in-out;
    animation: sk-cubemove 1.8s infinite ease-in-out;
  }

  .cube2 {
    -webkit-animation-delay: -0.9s;
    animation-delay: -0.9s;
  }
}

#ajax-error-display {
  color: #d61726;
  font-weight: bold;
}

@-webkit-keyframes sk-cubemove {
  25% { -webkit-transform: translateX($anim-size) rotate(-90deg) scale(0.5) }
  50% { -webkit-transform: translateX($anim-size) translateY($anim-size) rotate(-180deg) }
  75% { -webkit-transform: translateX(0px) translateY($anim-size) rotate(-270deg) scale(0.5) }
  100% { -webkit-transform: rotate(-360deg) }
}

@keyframes sk-cubemove {
  25% {
    transform: translateX($anim-size) rotate(-90deg) scale(0.5);
    -webkit-transform: translateX($anim-size) rotate(-90deg) scale(0.5);
  }
  50% {
    transform: translateX($anim-size) translateY($anim-size) rotate(-179deg);
    -webkit-transform: translateX($anim-size) translateY($anim-size) rotate(-179deg);
  }
  50.1% {
    transform: translateX($anim-size) translateY($anim-size) rotate(-180deg);
    -webkit-transform: translateX($anim-size) translateY($anim-size) rotate(-180deg);
  }
  75% {
    transform: translateX(0px) translateY($anim-size) rotate(-270deg) scale(0.5);
    -webkit-transform: translateX(0px) translateY($anim-size) rotate(-270deg) scale(0.5);
  }
  100% {
    transform: rotate(-360deg);
    -webkit-transform: rotate(-360deg);
  }
}