<% provide(:title, t('sessions.login.login')) %>
<h1><%=t 'sessions.login.login' %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= link_to t('sessions.login.forgot_password'), new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: 'checkbox inline' do %>
        <%= f.check_box :remember_me %>
        <span><%=t 'sessions.login.remember_checkbox' %></span>
      <% end %>

      <%= f.submit t('sessions.login.login'), class: "btn btn-primary centered-button", style: "width: 150px" %>
    <% end %>

    <p>
      <%=t 'sessions.signup.new_user' %> <%= link_to t('sessions.signup.signup_link'), signup_path %>
    </p>
  </div>
</div>
