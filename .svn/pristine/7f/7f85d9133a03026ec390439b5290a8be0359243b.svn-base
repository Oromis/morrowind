<% provide(:title, @character.name) %>

<div class="charsheet" ng-controller="CharsheetController"
     ng-init='init(
      "<%= character_path(@character, format: :json) %>",
      "<%= skill_character_path(@character, format: :json) %>",
      "<%= items_character_path(@character, format: :json) %>",
      "<%= slot_character_path(@character, format: :json) %>",
      "<%= spell_character_path(@character, format: :json) %>",
      "<%= level_up_character_path(@character, format: :json) %>",
      {
        "attributes": "<%= rule_set_attributes_path(@character.rule_set, format: :json) %>",
        "races": "<%= rule_set_races_path(@character.rule_set, format: :json) %>",
        "birthsigns": "<%= rule_set_birthsigns_path(@character.rule_set, format: :json) %>",
        "specializations": "<%= rule_set_specializations_path(@character.rule_set, format: :json) %>",
        "item_prototypes": "<%= rule_set_item_prototypes_path(@character.rule_set, format: :json) %>",
        "spells": "<%= rule_set_spells_path(@character.rule_set, format: :json) %>"
      })'>
  <div class="charsheet-col">
    <%= render 'char_base' %>
    <%= render 'char_attributes' %>
    <%= render 'char_weapon_skills' %>
  </div>
  <div class="charsheet-col-small">
    <%= render 'char_resis' %>
    <%= render 'char_skills' %>
  </div>
  <div class="charsheet-col-large">
    <%= render 'char_equip' %>
    <%= render 'char_items' %>
  </div>
  <div class="charsheet-col">
    <%= render 'char_spells' %>
    <%= render 'char_notes' %>
  </div>
</div>
