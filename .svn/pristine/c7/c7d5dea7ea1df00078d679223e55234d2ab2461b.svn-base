/* forms */

@mixin morrowind-input {
  border: 0;
  border-bottom: 1px solid black;
  border-radius: 0;
  font-family: 'planewalker';
  font-size: 16px;
  padding: 4px 12px;
  padding-bottom: 6px;
  background-color: transparent;
  background-image: none;
  outline: 0;
  box-shadow: none;
  color: black;

  &:focus {
    outline: 0;
    box-shadow: none;
    border: 0;
    border-bottom: 3px solid black;
    padding-bottom: 4px;
  }
}

/* Placeholder */
$placeholder-color: #333;
::-webkit-input-placeholder { /* WebKit, Blink, Edge */
    color:    $placeholder-color !important;
}
:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
   color:    $placeholder-color !important;
   opacity:  1;
}
::-moz-placeholder { /* Mozilla Firefox 19+ */
   color:    $placeholder-color !important;
   opacity:  1;
}
:-ms-input-placeholder { /* Internet Explorer 10-11 */
   color:    $placeholder-color !important;
}

/* Normal inputs */
input, textarea, select, .uneditable-input {
  border: 1px solid black;
  width: 100%;
  margin-bottom: 15px;
  @include box_sizing;
}

input.form-control, .bootstrap-select button.btn, textarea.form-control {
  @include morrowind-input;
}

textarea.form-control {
  border: 1px solid black;
  padding: 4px 4px 6px 4px;
  &:focus {
    border: 1px solid black;
    border-bottom: 3px solid black;
  }
}

.ta-editor.form-control {
  @include morrowind-input;
  padding: 0;
  border: 0px;
  font-size: 12px;
  font-family: serif;
  margin: 10px 0;
  &:focus {
    outline: none !important;
    border-color: black !important;
    border: 0px;
  }
  .ta-bind {
    outline: none;
    border: 0px;
    padding: 0;
  }
}

.checkbox {
  margin-top: 10px;
  margin-bottom: 10px;
  font-family: 'planewalker';

  input[type="checkbox"], input[type="radio"] {
    width: auto;
    margin-left: 0px;
  }
  span {
    margin-left: 20px;
  }
}

.selectpicker.btn {
  @include morrowind-input;
  width: 100%;
  float: none;
  background-color: transparent;
  box-shadow: none;
  color: black;
  text-align: left;
  line-height: 34px;
  position: relative;

  &:hover {
    background-color: transparent;
  }
  &:focus, &:active, &:active:focus {
    background-color: transparent;
    box-shadow: none;
    outline: 0 !important;
  }
  .caret {
    position: absolute;
    top: 50%;
    right: 6px;
  }
}

ul.selectpicker.dropdown-menu,
.char-equip-slot-dropdown {
  @include wooden;
  list-style: none;
  padding: 0;
  border-radius: 8px;

  a {
    color: white;
    cursor: pointer;
    display: block;
    padding: 3px 20px;
    text-decoration: none;
    text-align: left;
    &:hover, &:focus, &.as-selected {
      background-color: transparent;
      border: 0;
      outline: 0;
      box-shadow: inset 0 0 0 1000px rgba(0,0,0,0.2);
      border-left: 3px solid white;
      padding-left: 17px;
      color: white;
    }
  }
}

.char-equip-slot-dropdown {
  width: 170px;
  font-family: 'planewalker', serif;
  line-height: normal;
}

/* Select buttons */
.bootstrap-select.btn-group:not(.input-group-btn), .bootstrap-select.btn-group[class*="col-"] {
  display: block;
  margin-bottom: 15px;
  background-color: transparent;
  box-shadow: none;
  padding: 0;
  border: 0px;
  &:focus {
    border: 0px;
  }
  //&:not(.ng-pristine) {
  //  display: none;
  //}

  &.no-margin {
    margin-bottom: 0;
  }

  button.btn {
    float: none;
    background-color: transparent;
    box-shadow: none;
    color: black;
    height: 100%;
    border-color: black;

    &:hover {
      background-color: transparent;
    }
    &:focus, &:active, &:active:focus {
      background-color: transparent;
      box-shadow: none;
      outline: 0 !important;
      border-color: black;
    }
  }

  .dropdown-menu {
    @include wooden;
    ul {
      border: 0;
      background-color: transparent;
      li {
        display: block;
      }
      a {
        color: white;
        &:hover, &:focus {
          background-color: transparent;
          border: 0;
          outline: 0;
          box-shadow: inset 0 0 0 1000px rgba(0,0,0,0.2);
          border-left: 3px solid white;
          padding-left: 17px;
        }
      }
    }
  }
}

#error_explanation {
  color: red;
  ul {
    color: red;
    margin: 0 0 30px 0;
  }
}

.field_with_errors {
  .form-control {
    color: red;
  }
}

form .help {
  margin-left: 15px;
  &::before {
    content: "- "
  }
}

/* Normal buttons */
.btn:not(.selectpicker) {
  color: $btn-primary-color;
  background-image: image-url("sign.png");
  background-size: 100% 100%;
  background-color: transparent;
  border: 0;
  font-family: 'planewalker', serif;
  font-weight: bold;
  @include shadowed;
  @include shadowed-hover;

  &:hover, &:active, &:hover:active, &:visited, &:focus, &:active:focus {
    color: $btn-primary-color;
    border: 0;
    background-color: transparent;
    background-image: image-url("sign.png");
    background-size: 100% 100%;
    box-shadow: none;
    -webkit-box-shadow: none;
    outline: 0;
  }
}

.btn-lg {
  font-size: 20px;
}

form .btn {
  display: inline-block;
  width: auto;
}

.actions {
  margin-top: 20px;
  .btn {
    display: inline-block;
  }
}

/* Property modifiers */
.modifier-config {
  ul {
    list-style: none;
    margin-top: 20px;
    padding-left: 0;

    li {
      margin-top: 8px;
      margin-bottom: 4px;

      input {
        @include morrowind-input;
        margin: 0;
        background-repeat: no-repeat;
        background-position: right top;
      }
      .operator {
        width: 50px;
        &.ng-valid {
          background-image: image-url("tick.png");
        }
      }
      .value {
        width: 80px;
        &.ng-valid {
          background-image: image-url("tick.png");
        }
      }
      .abbr {
        width: 150px;
      }
    }
  }
}

/* Ability config */
.ability-config {
  &>ul {
    list-style: none;
    margin-top: 20px;
    padding-left: 0;
    
    &>li {
      border: 1px solid black;
      padding: 8px;
      margin: 4px;
      border-radius: 4px;
      
      input {
        @include morrowind-input;
        margin-bottom: 4px;
      }
      .modifier-config {
        margin-left: 20px;
      }
    }
  }
}

.selectpicker span img {
  width: 24px;
  height: 24px;
}

.btn-group {
  .btn:not(.selectpicker) {
    background-image: none;
    @include wooden;
    background-size: auto;
    &:hover, &:focus, &:active, &:active:focus {
      background-image: none;
      @include wooden;
      background-size: auto;
    }
    &.active {
      box-shadow: inset 0 0 1000px rgba(0,0,0,0.6);
    }
    &.btn-icon {
      padding: 4px;
      img {
        max-width: 24px;
        max-height: 24px;
      }
    }
  }
}

.btn-wood {
  @include wooden-button;
  border-radius: 6px;
}