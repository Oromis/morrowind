/* variable overrides */

@font-face {  
  font-family: 'planewalker';  
  src: font-url('planewalker-webfont.eot');  
  src: font-url('planewalker-webfont.eot?#iefix') format('embedded-opentype'),  
       font-url('planewalker-webfont.woff') format('woff'),  
       font-url('planewalker-webfont.ttf') format('truetype'),  
       font-url('planewalker-webfont.svg#planewalker') format('svg');
  font-weight: normal;  
  font-style: normal;  
}

@font-face {
  font-family: 'Glyphicons Halflings';

  src: font-url('glyphicons-halflings-regular.eot');
  src: font-url('glyphicons-halflings-regular.eot?#iefix') format('embedded-opentype'),
       font-url('glyphicons-halflings-regular.woff2') format('woff2'),
       font-url('glyphicons-halflings-regular.woff') format('woff'),
       font-url('glyphicons-halflings-regular.ttf') format('truetype'),
       font-url('glyphicons-halflings-regular.svg#glyphicons_halflingsregular') format('svg');
}

$gray: black;
$gray-darker: black;
$gray-dark: black;

$link-color: black;
$link-hover-color: black;

$btn-primary-color: black;

$font-family-serif: Georgia, serif;
$font-family-base: $font-family-serif;

/* Custom styles */
@import "mixins";
@import "forms";
@import "popover";

/* variables, etc. */

$gray-light: #eee;
$gray-medium-light: #eaeaea;
$seal-color: #900;

/* universal */

body.wallpaper {
  background: image-url("balmora.jpg") no-repeat fixed;
}

body.table {
  background: image-url("table.jpg") repeat;
}

section {
  overflow: auto;
}

body > .container {
  padding-top: 60px;
}
body > .container-fluid {
  padding-top: 60px;
  padding-left: 5px;
  padding-right: 5px;
}

body {
  color: black;
  font-family: serif;
}

.paper {
  background: transparent image-url("paper.png") no-repeat;
  background-size: 100% 100%;
  border-radius: 10px;
  padding: 60px 60px 60px 60px;
}

/* tables */ 
th, td {
  padding: 8px;
}
thead {
  border-bottom: 1px solid black;
}

/* typography */

h1, h2, h3, h4, h5, h6 {
  line-height: 1;
  font-family: 'planewalker', serif !important;
  &.inline {
    display: inline-block;
    margin: 5px 0;
    vertical-align: middle;
  }
}

h2 {
  margin-bottom: 20px;
}

p {
  font-size: 1.1em;
  line-height: 1em;
}

.right {
  text-align: right;
}

/* header */

.navbar {
  margin-bottom: -50px;
}

.navbar-inverse {
  background-color: black;
}

.logo {
  float: left;
}

a.logo {
  margin-right: 10px;
  margin-left: 10px;
  font-size: 1.7em;
  color: #fff !important;
  letter-spacing: -1px;
  padding-top: 9px;
  font-weight: bold;
  font-family: 'planewalker', serif;
  &:hover, &:active, &:visited, &:focus {
    color: #fff;
    text-decoration: none;
  }
}

a, a:hover, a:active, a:visited, a:focus {
  color: black;
}

img.logo {
  margin-top: 1px;
}

/* footer */

footer {
  margin-top: 45px;
  padding-top: 5px;
  border-top: 1px solid #eaeaea;
  color: $gray-light;
  a {
    color: #555;
    &:hover {
      color: #222;
    }
  }
  small {
    float: left;
  }
  ul {
    float: right;
    list-style: none;
    li {
      float: left;
      margin-left: 15px;
    }
  }
}

/* miscellaneous */

.clear {
  clear: both;
}
.debug_dump {
  clear: both;
  float: left;
  width: 100%;
  margin-top: 45px;
  @include box_sizing;
}

.gravatar_edit {
  margin-top: 15px;
}


.jumbotron {
  background-color: transparent;
  text-align: center;
}

.pagination {
  @include shadowed;
}

.pagination > li > a, .pagination > li > span,
.pagination > li > a:focus, .pagination > li > span:focus {
  @include wooden;
  @include wooden-hover;
}

.pagination > .disabled > span, .pagination > .disabled > span:hover, 
.pagination > .disabled > span:focus, .pagination > .disabled > a, 
.pagination > .disabled > a:hover, .pagination > .disabled > a:focus {
  border: 1px solid black;
  @include darken(0.2);
  color: #999;
}

.pagination > .active > a, .pagination > .active > a:hover, 
.pagination > .active > a:focus, .pagination > .active > span, 
.pagination > .active > span:hover, .pagination > .active > span:focus {
  box-shadow: inset 0 0 0 1000px rgba(255,255,255,0.3);
  border: 1px solid black;
  &:active, &:focus {
    background-color: $seal-color;
  }
}

/* Users index */

.users {
  list-style: none;
  margin: 0;
  li {
    overflow: auto;
    padding: 10px 0;
    border-bottom: 1px solid black;
  }
}

.user {
  list-style: none;
  @include wooden;
  @include wooden-shadowed;
  border-radius: 5px;
  padding-top: 15px;
  padding-bottom: 15px;
  margin-top: 20px;

  a {
    color: white;
  }
}

/* Abilities */
.ability {
  display: inline-block;
  @include wooden-shadowed;
  border-radius: 5px;
  border: 1px solid black;
  padding: 8px;
  max-width: 300px;
  vertical-align: top;
  margin-bottom: 10px;
  margin-left: 10px;
  
  h3 {
    margin-top: 0;
  }
}

/* minitiles */
.minitile {
  display: inline-block;
  padding: 10px;
  margin: 10px;
  border: 1px solid black;
  border-radius: 10px;

  > * {
    text-align: center;
  }
  > :first-child {
    margin-top: 0;
  }
}

/* Items */
.item-type {
  display: inline-block;
  float: left;
}

.item-category {
  border-radius: 10px;
  border: 1px solid black;
  width: 100%;
  overflow: hidden;
  float: left;
  margin-top: 10px;
  margin-bottom: 10px;

  h3 {
    @include wooden;
    margin: 0;
    padding: 4px;
    text-align: center;
  }
}


[data-clickable] {
  @include clickable;
  &[data-clickable=false] {
    cursor: default;
  }
}

.prop {
  line-height: 16px;
  height: 16px;
  display: inline-block;
  vertical-align: top;

  img {
    width: 16px;
    height: 16px;
    margin-left: 2px;
    margin-top: -1px; // Strangely, the icon is 1px off. This fixes it.
  }
}

.scrollable {
  white-space: pre-line;
  overflow-x: hidden;
  position: relative;
}

.pseudo-table {
  @include pseudo-table(40px);
}

.spells-display {
  padding: 0;
  margin-top: 20px;
  margin-bottom: 20px;

  .spells-table {
    @include pseudo-table(40px);
    table-layout: fixed;
    padding: 0;

    .spell-display {
      .spell-image {
        width: 32px;
      }
      .spell-text > * {
        margin: 0;
        text-overflow: ellipsis;
        overflow: hidden;
        white-space: nowrap;
      }
      .spell-checks {
        width: 112px + 10px;
        img:nth-child(2) {
          margin: 0 4px;
        }
      }
      .spell-props {
        padding-left: 4px;
        line-height: 100%;
        text-align: center;
        &.mana {
          width: 48px;
        }
        &.range {
          width: 55px;
        }
        &.effect {
          width: 77px;
        }
        &.handicap {
          width: 41px;
        }
        &.duration {
          width: 41px;
        }
      }
    }
  }
}

.loading-spinner {
  opacity: 0;
}

.characters-overview-user-container {
  h2 {
    margin-top: 5px;
    margin-bottom: 5px;
  }
  border-bottom: 1px solid black;
}

.padding-sm {
  padding-left: 4px !important;
  padding-right: 4px !important;
}