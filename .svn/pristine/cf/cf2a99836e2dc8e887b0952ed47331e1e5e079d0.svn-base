<div class="ability-config">
  <a class="btn" ng-click="addAbility()">{{ newText }}</a>
  <ul>
    <li ng-repeat="ability in abilities" ng-class="{hidden: ability._destroy}">
      <input type="text"
             name="{{ nameStart }}[{{ ability.frontend_id }}][name]{{ nameEnd }}" 
             class="name"
             placeholder="Name" 
             ng-model="ability.name" 
             ng-required="true" />
      <input type="text"
             class="desc"
             placeholder="Beschreibung / Effekte"
             name="{{ nameStart }}[{{ ability.frontend_id }}][desc]{{ nameEnd }}"
             ng-model="ability.desc" 
             ng-pattern="/^[+\-\*\/]$/"
             ng-required="true"/>
      <input type="hidden" 
             name="{{ nameStart }}[{{ ability.frontend_id }}][id]{{ nameEnd }}"
             ng-value="ability.id" 
             ng-if="ability.id" />
      <input type="hidden"
             name="{{ nameStart }}[{{ ability.frontend_id }}][_destroy]{{ nameEnd }}"
             ng-if="ability._destroy"
             ng-value="ability._destroy" />
      <h3>Buffs</h3>
      <property-modifier-config mods="ability.property_modifiers"
              prop-url="propUrl"
              name-start="{{ nameStart }}[{{ ability.frontend_id }}][property_modifiers_attributes"
              name-end="]{{ nameEnd }}"
              new-text="Neuer Buff"
              delete-text="Buff lÃ¶schen">
      </property-modifier-config>
      <a class="btn" ng-click="removeAbility(ability)">{{ deleteText }}</a>
    </li>
  </ul>
</div>
